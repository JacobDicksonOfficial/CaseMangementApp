<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Case Title -->
        <EditText
            android:id="@+id/caseTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_case_name" />

        <!-- Case Description -->
        <EditText
            android:id="@+id/caseDescription"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginBottom="8dp"
            android:hint="@string/hint_case_details" />

        <!-- Gender -->
        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Location Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="4dp" />

        <!-- Location Text -->
        <EditText
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Select location from map"
            android:focusable="false"
            android:clickable="false" />

        <!-- Pick Location Button -->
        <Button
            android:id="@+id/btnPickLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Pick Location on Map"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />

        <!-- Add Image -->
        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/button_add_image"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/caseImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <!-- Save -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/button_add_case"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />

        <!-- Cancel -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
