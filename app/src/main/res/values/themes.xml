<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- =====================================================
         Base App Theme (Material3, shared by all screens)
         ===================================================== -->
    <style
        name="Base.Theme.CaseManagementApp"
        parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize colors later if needed -->
        <!-- <item name="colorPrimary">@color/...</item> -->
    </style>

    <!-- =====================================================
         Main Application Theme
         ===================================================== -->
    <style
        name="Theme.CaseManagementApp"
        parent="Base.Theme.CaseManagementApp" />

    <!-- =====================================================
         Splash Theme (prevents grey launcher preview)
         ===================================================== -->
    <style
        name="Theme.CaseManagementApp.Splash"
        parent="Theme.CaseManagementApp">

        <!-- Shows your splash drawable immediately -->
        <item name="android:windowBackground">@drawable/splash_window_background</item>

        <!-- Prevents system showing launcher icon preview window -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Optional polish -->
        <item name="android:statusBarColor">#0a1929</item>
    </style>

    <!-- =====================================================
         Login Theme (Material theme required for MaterialButton/TextInputLayout)
         ===================================================== -->
    <style
        name="Theme.CaseManagementApp.Login"
        parent="Base.Theme.CaseManagementApp">

        <!-- Extra safety: avoid action bar/title flashes -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
